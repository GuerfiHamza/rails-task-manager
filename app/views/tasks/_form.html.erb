<%= form_with model: @task do |f| %>
  <%= f.label :title %> <br>
  <%= f.text_field :title, value: @task.title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"%><br>
  <%= f.label :details %><br>
  <%= f.text_area :details, value: @task.details, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"%><br>
  <%= f.label :completed %>
  <%= f.check_box :completed %><br>
  <%= f.submit %>
  
<% end %>
